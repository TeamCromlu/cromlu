.Process
	padding-bottom 3em
	padding-top 5em
	background-color white
	&__box
		margin auto
		text-align center
		width 90%
	&__text
		padding 2em 0
		h2
			font-size 2.5em
	&__arts
		width 100%
		margin auto
		padding 1em 0
	&__cajas
		margin 1em .5em		
		max-width 300px
		border-radius 15px
		text-align center
		display inline-block
		h3
			padding .5em
			font-size 1.7em
		img
			width 230px
			border-radius 50%
		h4
			margin auto
			width 85%
			padding-top 2em
			font-size 1.2em
		p 
			margin auto
			width 85%
			padding 1em .5em
			
@media screen and (min-width 1000px)
	.Process
		&__cajas
			margin 0 .5em
			width 22%
			img
				width 60%
			