.escoge
	background #FFF
	&__box
		width 100%
		margin 0 auto
		text-align center
		padding-top 2em
		padding-bottom 2em
	&__title
		display block
		width 100%
		text-align center
		margin 0 auto
		h2
			font-size title_h2
			color gris_letra
		p
			font-size size_p
			color gris_letra
	&__modelos
		display block
		width 100%
		padding-top 1em
		.modelos--item
			display block
			width 100%
			h3
				color gris_letra
			figure
				width 100%
				padding-top .8em
				img
					max-width 90%
					&:hover
						background #61402C
						box-shadow rgba(89,255,233,0.68) 0px 0px 28px
															
@media (min-width 768px)
	.escoge
		&__box
			width 100%
			text-align center
			magin 0 auto
		&__title
			display block
			width 100%
			h2
				font-size 2.9em
			p
				font-size 1.5em
		&__modelos
			display block
			width 100%
			.modelos--item
				display inline-block
				width 45%
				
@media (min-width 1000px)
	.escoge
		&__box
			width 100%
			text-align center
			margin 0 auto
		&__title
			display block
			width 100%
		&__modelos
			width 100%
			display block 
			.modelos--item
				display inline-block
				width 30%
		
